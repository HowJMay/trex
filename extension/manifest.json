{
  "manifest_version": 2,

  "name": "ytTREX",

  "short_name": "ytTREX",
  "description": "This browser extension is a minor experiment we are conducting, it is not yet intended for mainstream usage",
  "version": "1.2.0",
  "author": "challenge algorithms and big data monopolist with https://tracking.exposed",

  "icons": {
      "16": "yttrex16.png",
      "48": "yttrex48.png",
      "128": "yttrex128.png"
  },

  "browser_action": {
      "default_icon": "yttrex16.png",
      "default_popup": "popup.html"
  },

  "permissions": [
    "storage",
    "cookies",
    "tabs",
    "http://localhost:9000/",
    "https://*.youtube.com/",
    "https://*.tracking.exposed/"
  ],

  "background": {
      "scripts": ["./background.js"],
      "persistent": false
  },

  "content_scripts": [
    {
      "matches": [
          "http://localhost/*",
          "http://127.0.0.1/*",
          "https://*.tracking.exposed/*",
          "https://*.youtube.com/*"
      ],
      "js": ["./app.js"]
    }
  ],

  "web_accessible_resources": [
      "*.png"
  ]
}
