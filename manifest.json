{
  "manifest_version": 2,

  "name": "ytTREX",

  "short_name": "ytTREX",
  "description": "This browser extension is a minor experiment we are conducting, it is not yet intended for mainstream usage",
  "version": "0.0.2",
  "author": "Claudio Agosti",

  "icons": {
      "16": "yttrex16.png",
      "48": "yttrex48.png",
      "128": "yttrex128.png"
  },

  "browser_action": {
      "default_icon": "yttrex16.png",
      "default_popup": "popup.html"

  },

  "permissions": [
    "storage",
    "cookies",
    "http://localhost:8000/",
    "https://*.youtube.com/",
    "https://*.tracking.exposed/"
  ],

  "background": {
      "scripts": ["./background.js"],
      "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
      "js": ["./app.js"]
    }
  ],

  "web_accessible_resources": [
      "*.png"
  ]
}
