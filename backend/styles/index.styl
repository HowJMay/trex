*
  margin 0
  padding 0
  box-sizing border-box
  font-family 'Work Sans'

.left
  text-align left

.right
  text-align right

img
  max-width 100%
  max-height 100%

p
  font-size 1.3em

.center
  text-align center

p
  font-size 1.3em

.theinputfield
  width 70%
  font-size 1.4em

.buttonfield
  width 10%

.jumbotronwidth
  max-width 50%

.jumbotron
  background-color white

.monospace
  font-family 'Source Code Pro', monospace
  margin 0

.mainstyle
  padding-right 10%
  padding-left 10%
  padding-bottom 2%


  h2
    border-left #3c5a99 0.01em solid
    padding-left 0.1em


/* unordered list */
.fb--icon-list
  list-style-image url("/images/yttrex16.png")
  font-size 1.3em

@font-face
  font-family 'Work Sans'
  font-style normal
  font-weight 400
  src local('Work Sans'), url(/fonts/WorkSans.ttf) format('truetype');

.githublogo
    width 20px
    height auto

.fbtrexlogo
    border solid 1px #ccc
    border-radius 10%
    padding 1em
    width 5em
    background-color lightyellow

.logocontainer
    text-align right


.fb--icon-list > li {
    margin-left: 7%;
    line-height: 2em;
}

.clickable
    border 1px solid
    padding 10px
    box-shadow 0px 5px 5px 1px #fe5000
    cursor pointer

.space
    margin-bottom 20px

.text
    margin-left 8%
    padding-left 2%
    margin-right 8%
    padding-right 2%

h1.text
    text-align center
    font-size 8em

.title
    text-align center

.negative
    background black
    color white
    border-radius 0px 35px 0px 35px
    padding 2em

.highlight
    border-radius 0px 35px 0px 35px
    border black 5px solid
    padding 2em

.footer
    margin-top 5px
    border-top black 1px solid
    border-left black 1px solid
    border-right black 1px solid
    padding 1em

.variable
    font-family monospace
    background-color #f2ffc9
    

/* override bootstrap */
.navbar-default
    background-color white
