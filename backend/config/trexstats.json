{
    "mongoHost": "localhost",
    "mongoPort": "27017",
    "mongoDb": "yttrex",

    "stats": [
    {
        "name": "supporters",
        "column": "supporters",
        "timevar": "creationTime",
        "variables": [
            {
                "name": "newcomers",
                "selector": {}
            },
            {
                "name": "118",
                "selector": { "version": "1.1.8" }
            },
            {
                "name": "121",
                "selector": { "version": "1.2.1" }
            },
            {
                "name": "other",
                "selector": { "version": { "$ne": "1.1.8", "$ne": "1.2.1" }}
            }
        ]
    },
    {
        "name": "related",
        "column": "metadata",
        "timevar": "savingTime",
        "variables": [
            {
                "name": "total",
                "selector": { }
            },
            {
                "name": "related-20",
                "selector": { "related": { "$size": 20 }}
            },
            {
                "name": "related-19",
                "selector": { "related": { "$size": 19 }}
            },
            {
                "name": "related-1",
                "selector": { "related": { "$size": 1 }}
            }
        ]
    },
    {
        "name": "processing",
        "column": "videos",
        "timevar": "savingTime",
        "variables": [
            {
                "name": "successful",
                "selector": { "processed": true }
            },
            {
                "name": "failure",
                "selector": { "processed": false }
            },
            {
                "name": "unprocessed",
                "selector": { "processed": { "$exists": false } }
            },
            {
                "name": "total",
                "selector": { }
            }
        ]
    },
    {
        "name": "processing2",
        "column": "htmls",
        "timevar": "savingTime",
        "variables": [
            {
                "name": "successful",
                "selector": { "processed": true }
            },
            {
                "name": "failure",
                "selector": { "processed": false }
            },
            {
                "name": "unprocessed",
                "selector": { "processed": { "$exists": false } }
            },
            {
                "name": "total",
                "selector": { }
            }
        ]
    },
    {
        "name": "metadata",
        "column": "metadata",
        "timevar": "savingTime",
        "variables": [
            {
                "name": "hasTitle",
                "selector": { "title": { "$exists": true }}
            },
            {
                "name": "hasAuthor",
                "selector": { "author": { "$exists": true }}
            },
            {
                "name": "hasRelated",
                "selector": { "related.[0]": { "$exists": true }}
            },
            {
                "name": "hasAd",
                "selector": { "adChannel": { "$exists": true }}
            },
            {
                "name": "total",
                "selector": { }
            }
        ]
    }
    ]
}
