{
  "extends": "./config/typescript/tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "noEmit": true,
    "jsx": "react",
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types",
      "./packages/shared/node_modules/@types",
      "./backend/node_modules/@types",
      "./typings"
    ]
  },
  "include": [
    "./config/typescript/**/*",
    "./packages/shared/**/*",
    "./packages/taboule/**/*",
    "./backend/**/*",
    "./extension/src/**/*",
    "./guardoni/src/**/*",
    "./YCAI/src/**/*"
  ],
  "exclude": [
    "**/node_modules/*",
    "**/build/*",
    "**/jest.base.config.js",
    "**/jest.config.js",
    "**/webpack*.ts",
    "**/webpack*.js"
  ]
}
